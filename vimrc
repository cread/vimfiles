" General
set nocompatible

" Editing
set autowrite
set autoindent
set shiftwidth=2 
set tabstop=2 
set softtabstop=2 
set expandtab
set formatoptions=tcrqwn
set showmatch matchtime=5
set whichwrap=<,>,h,l,[,]
set cursorline
"highlight CursorLine cterm=bold
"highlight MatchParen ctermbg=white
set modeline

set background=dark

" Store .swp files in /tmp with mangled names
set directory=/tmp//


